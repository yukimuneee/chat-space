.main-chat
  .main-chat__mainheader
    .main-chat__mainheader__groupinfomation
      .main-chat__mainheader__groupinfomation__groupname
        = @group.name
      .main-chat__mainheader__groupinfomation__groupmember
        Menber:
        - @group.users.each do |user|
          = user.name
    =link_to edit_group_path(@group.id), class: "main-chat__mainheader__edit" do
      Edit
  .main-chat__maincontents
    = render partial: 'message', collection: @messages
  .main-chat__form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'main-chat__form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'main-chat__form__mask__image' do
          = icon('fas', 'image', class: 'main-chat__form__mask__image__icon')
          = f.file_field :image, class: 'main-chat__form__mask__image__hidden'
      = f.submit 'Send', class: 'main-chat__form__submit'



 
